<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <view class = 'com.example.muondetector.ResizePicsActivity$MyImageView'
        android:id="@+id/cropPictureView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cropPictureContent"/>

    <ToggleButton
        android:id="@+id/cropRectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="@string/crop_rect_button_off"
        android:textOn="@string/crop_rect_button_on"/>

</RelativeLayout>